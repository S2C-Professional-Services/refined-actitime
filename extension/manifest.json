{
	"name": "Refined actiTIME",
	"version": "1.3.0",
	"description": "Simplifies time tracking in actiTIME.",
	"homepage_url": "https://github.com/niklasi/refined-actitime",
	"manifest_version": 2,
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
	"permissions": [
		"https://*.actitime.com/*",
    "webNavigation",
    "storage"
	],
	"icons": {
		"128": "icon.png"
	},
  "background": { 
    "scripts": ["background.js"],
    "persistent": false
  },
	"content_scripts": [
		{
			"run_at": "document_end",
			"matches": [
				"https://*.actitime.com/user/submit_tt.do*"
			],
      "css": [
        "content.css"
      ],
			"js": [
				"time-tracking.js"
			]
		}
	]
}
